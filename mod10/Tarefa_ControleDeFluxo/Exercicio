import java.util.Scanner;
/**
 * @author nnkidev
 */
public class Exercicio
{
    public static void main(String[] args)
    {
     Scanner s = new Scanner(System.in);

     System.out.print("\nDigite a sua primeira nota: ");
     float nota1 = s.nextFloat();

     System.out.print("\nDigite a sua segunda nota: ");
     float nota2 = s.nextFloat();

     System.out.print("\nDigite a sua terceira nota: ");
     float nota3 = s.nextFloat();

     System.out.print("\nDigite a sua quarta nota: ");
     float nota4 = s.nextFloat();

     float media = (nota1 + nota2 + nota3 + nota4) / 4;
     if(media >= 7)
        {
         System.out.println("\nA sua média final é de: " + media + "\nPortanto, você está aprovado!");
        }
     else if(media >= 5)
        {
         System.out.println("\nA sua média final é de: " + media + "\nPortanto, você está de recuperação.");
        }
     else
        {
         System.out.println("\nA sua média é de: " + media + "\nPortanto, você está reprovado!");
        }
     }
}
